<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_season_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="#589be1"

        >
    <ImageView
        android:id="@+id/country_season_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right_normal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/search_season_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_b"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/search_return"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/season_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/search_season_login"/>

    </RelativeLayout>
    <com.example.dllo.chanyouji.toolsclass.RefreshListView
        android:id="@+id/season_detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.4"
        android:divider="@null"/>


</LinearLayout>