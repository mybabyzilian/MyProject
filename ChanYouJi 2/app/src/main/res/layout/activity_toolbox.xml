<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:background="#589be1"
        >
        <ImageView
            android:id="@+id/tool_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right_normal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/tool_login_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tool_return"/>
        <TextView
            android:id="@+id/tool_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:text="选择目的地"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tool_login_iv"/>

    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tool_tablayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        app:tabIndicatorColor="#589be1"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="#589be1"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/tool_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

</LinearLayout>